{
  "compilerOptions": {
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "rootDir": "src",
    "outDir": "dist",

    "module": "CommonJS",
    "target": "ES2020",
    "moduleResolution": "node",

    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
